@model IEnumerable<Club>

<div class="album py-5 bg-light">
    <div class="container">
        <div class="row">
            @foreach (var item in Model)
            {
                <div class="col-md-4">
                    <div class="card mb-4 box-shadow">
                        <img class="card-img-top" src="@item.ProfileImage" width="100%" height="225" alt="Card image cap">
                        <div class="card-body">
                            <p class="card-text">@item.Name</p>
                            <p class="card-text">@item.Desc</p>
                            <div class="d-flex justify-content-between align-items-center">
                                <div class="btn-group">
                                    <a type="btn btn-success" asp-controller="Club" asp-action="Detail" asp-route-id="@item.Id" class="btn btnsmall btn-outline-secondary">SHOW DETAILS</a>
                                    <a type="btn btn-success" asp-controller="Club" asp-action="Edit" asp-route-id="@item.Id" class="btn btnsmall btn-outline-secondary">EDIT CLUB</a>
                                    <a type="btn btn-success" asp-controller="Club" asp-action="Delete" asp-route-id="@item.Id" class="btn btnsmall btn-outline-secondary">DELETE CLUB</a>
                                </div>
                                <small class="text-muted">@item.Category</small>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</div>